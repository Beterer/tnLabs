@model GB.tnLabs.Web.Models.SubscriptionCreateModel
@{
	ViewBag.Title = "Create Subscription";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Index", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
	<div class="form-horizontal">
		<div class="form-group">
			@Html.LabelFor(model => model.AzureSubscriptionId, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.AzureSubscriptionId, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.AzureSubscriptionId, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.CertificateKey, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.CertificateKey, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.CertificateKey, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.BlobStorageName, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.BlobStorageName, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.BlobStorageName, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.BlobStorageKey, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.BlobStorageKey, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.BlobStorageKey, "", new { @class = "text-danger" })
			</div>
		</div>

		<span class="btn btn-file">
			<input type="file" name="file" id="file" /></span>

			<div class="form-group">
				<div class="col-md-offset-2 col-md-10">
					<input type="submit" value="Create" class="btn btn-default" />
				</div>
			</div>
</div>
}
